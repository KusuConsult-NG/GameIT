@model IEnumerable<WebApplication3.Models.Games.GameITModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GameName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GameOwner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GameAddressOwner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GameAddressOwnerKey)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GameName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameOwner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameAddressOwner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameAddressOwnerKey)
            </td>
            <td>
                <a asp-action="BuyIT" asp-route-id="@item.Id">Buy Game</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
